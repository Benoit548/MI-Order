<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MI_Order" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <!--Creer le composant titre par défaut-->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
    </style>

    <!--Creer le composant sous titre par défaut-->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!--Creer le composant titre par défaut-->
    <style name="titleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <!--stle pour la bottom navigation view-->
    <style name = "BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/kanit_regular</item>
    </style>



</resources>